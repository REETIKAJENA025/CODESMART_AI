{
    "manifest_version": 3,
    "name": "CodeSmart Assistant",
    "version": "1.0",
    "description": "An AI Assistant for LeetCode Users",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": ["https://leetcode.com/problems/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.jpg",
            "32": "icons/icon32.png",
            "48": "icons/icon48.jpg",
            "128": "icons/icon128.jpg"
        }
    },
    "icons": {
        "16": "icons/icon16.jpg",
        "32": "icons/icon32.png",
        "48": "icons/icon48.jpg",
        "128": "icons/icon128.jpg"
    }
}